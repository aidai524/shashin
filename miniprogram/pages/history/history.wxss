/* pages/history/history.wxss */
.page {
  min-height: 100vh;
  background-color: #F6F7F9;
  padding-bottom: 120rpx;
}

/* 加载中 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #E0E0E0;
  border-top-color: #111111;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #999999;
}

/* 内容滚动区 */
.content-scroll {
  height: 100vh;
  padding: 12rpx;
}

/* 历史记录列表 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding-bottom: 12rpx;
}

.history-card {
  position: relative;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

/* 日期标签 */
.date-badge {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  padding: 8rpx 16rpx;
  background-color: rgba(17, 17, 17, 0.75);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  z-index: 10;
}

.date-badge text {
  font-size: 24rpx;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 1;
}

/* 图片网格 - 2列布局 */
.image-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 2rpx;
  background-color: #F0F0F0;
}

.image-item {
  aspect-ratio: 1;
  position: relative;
  overflow: hidden;
}

.history-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 删除按钮 */
.delete-btn {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10rpx);
  border-radius: 50%;
  z-index: 10;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.delete-icon {
  font-size: 28rpx;
  line-height: 1;
}

.delete-btn:active {
  background-color: rgba(255, 107, 107, 0.9);
  transform: scale(0.95);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #111111;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 40rpx;
}

.goto-create-btn {
  padding: 20rpx 48rpx;
  background-color: #111111;
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 48rpx;
  border: none;
}

/* 清空按钮容器 */
.clear-btn-container {
  position: fixed;
  bottom: 160rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  padding: 0 32rpx;
}

.clear-btn {
  padding: 20rpx 48rpx;
  background-color: #FFFFFF;
  color: #FF6B6B;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 48rpx;
  border: 1rpx solid rgba(255, 107, 107, 0.3);
}
