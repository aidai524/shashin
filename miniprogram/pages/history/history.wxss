/* pages/history/history.wxss */
.page {
  min-height: 100vh;
  background-color: #F6F7F9;
  padding-bottom: 120rpx;
}

/* 页面头部 */
.page-header {
  padding: 32rpx 32rpx 24rpx;
}

.page-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #111111;
  line-height: 1.3;
}

.page-subtitle {
  display: block;
  font-size: 24rpx;
  font-weight: 400;
  color: #111111;
  opacity: 0.6;
  margin-top: 4rpx;
}

/* 加载中 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #E0E0E0;
  border-top-color: #111111;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #999999;
}

/* 内容滚动区 */
.content-scroll {
  height: calc(100vh - 180rpx);
  padding: 0 32rpx;
}

/* 历史记录列表 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding-bottom: 24rpx;
}

.history-card {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 36rpx rgba(0, 0, 0, 0.10);
}

/* 图片网格 */
.image-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 2rpx;
  background-color: #F0F0F0;
}

.image-item {
  aspect-ratio: 1;
  position: relative;
  overflow: hidden;
}

.history-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 卡片信息 */
.card-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
}

.info-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.template-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #111111;
}

.create-time {
  font-size: 24rpx;
  color: #999999;
}

.delete-btn {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #F6F7F9;
  border-radius: 50%;
}

.delete-icon {
  font-size: 48rpx;
  color: #999999;
  line-height: 1;
  font-weight: 300;
}

.delete-btn:active {
  background-color: #FFE5E5;
}

.delete-btn:active .delete-icon {
  color: #FF6B6B;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #111111;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 40rpx;
}

.goto-create-btn {
  padding: 20rpx 48rpx;
  background-color: #111111;
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 48rpx;
  border: none;
}

/* 清空按钮容器 */
.clear-btn-container {
  position: fixed;
  bottom: 160rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  padding: 0 32rpx;
}

.clear-btn {
  padding: 20rpx 48rpx;
  background-color: #FFFFFF;
  color: #FF6B6B;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 48rpx;
  border: 1rpx solid rgba(255, 107, 107, 0.3);
}
