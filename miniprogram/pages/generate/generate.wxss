/* pages/generate/generate.wxss */
.page {
  min-height: 100vh;
  background-color: #F6F7F9;
  padding-bottom: 160rpx;
}

/* 模板区域 */
.template-section {
  padding: 32rpx;
}

.template-card {
  display: flex;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 36rpx rgba(0, 0, 0, 0.10);
}

.template-thumb {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}

.template-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 24rpx;
}

.template-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #111111;
  margin-bottom: 8rpx;
}

.template-desc {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 通用区域 */
.section {
  padding: 0 32rpx 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #666666;
  margin-bottom: 16rpx;
}

/* 角色选择 */
.character-scroll {
  width: 100%;
  white-space: nowrap;
}

.character-list {
  display: inline-flex;
  gap: 16rpx;
}

.character-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.character-item.selected {
  border-color: #111111;
  background-color: #F6F7F9;
}

.character-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #F0F0F0;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-img {
  width: 100%;
  height: 100%;
}

.avatar-placeholder {
  font-size: 40rpx;
  color: #999999;
}

.character-name {
  font-size: 22rpx;
  color: #111111;
  white-space: nowrap;
}

.empty-characters {
  padding: 40rpx;
  color: #999999;
  font-size: 24rpx;
}

/* 比例选择 */
.ratio-list {
  display: flex;
  gap: 16rpx;
}

.ratio-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.ratio-item.active {
  border-color: #111111;
  background-color: #F6F7F9;
}

.ratio-preview {
  width: 60rpx;
  height: 60rpx;
  background-color: #E0E0E0;
  border-radius: 8rpx;
  margin-bottom: 8rpx;
}

.ratio-preview.ratio-1-1 {
  width: 60rpx;
  height: 60rpx;
}

.ratio-preview.ratio-3-4 {
  width: 45rpx;
  height: 60rpx;
}

.ratio-preview.ratio-16-9 {
  width: 80rpx;
  height: 45rpx;
}

.ratio-label {
  font-size: 24rpx;
  color: #111111;
}

/* 生成结果 */
.generated-section {
  padding: 0 32rpx 24rpx;
}

.generated-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12rpx;
}

.generated-item {
  aspect-ratio: 1;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #FFFFFF;
}

.generated-img {
  width: 100%;
  height: 100%;
}

/* 操作区域 */
.action-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  background-color: #FFFFFF;
  border-top: 1rpx solid #F0F0F0;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.generate-btn {
  width: 100%;
  height: 96rpx;
  background-color: #111111;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.generate-btn::after {
  border: none;
}

.generate-btn.generating {
  background-color: #CCCCCC;
}
