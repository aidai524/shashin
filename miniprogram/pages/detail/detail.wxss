/* pages/detail/detail.wxss */
.page {
  position: relative;
  width: 100vw;
  height: 100vh;
  background-color: #000000;
  display: flex;
  flex-direction: column;
}

/* 主图片容器 */
.main-image-container {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

.main-image {
  width: 100%;
  height: 100%;
}

.image-loading {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.5);
}

.spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #FFFFFF;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 底部预览列表 */
.thumbnail-list-container {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
  padding: 32rpx 0;
}

.thumbnail-scroll {
  width: 100%;
  white-space: nowrap;
}

.thumbnail-list {
  display: inline-flex;
  padding: 0 24rpx;
  gap: 12rpx;
}

.thumbnail-item {
  flex-shrink: 0;
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  overflow: hidden;
  border: 4rpx solid transparent;
  transition: all 0.3s;
  opacity: 0.6;
}

.thumbnail-item.active {
  border-color: #FFFFFF;
  opacity: 1;
  transform: scale(1.05);
}

.thumbnail-image {
  width: 100%;
  height: 100%;
}

/* 右上角操作按钮 */
.action-buttons {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  display: flex;
  gap: 16rpx;
  z-index: 100;
}

.action-btn {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(20rpx);
  border-radius: 50%;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.btn-icon {
  font-size: 36rpx;
  color: #FFFFFF;
  line-height: 1;
  font-weight: 300;
}

.action-btn:active {
  background-color: rgba(255, 255, 255, 0.2);
  transform: scale(0.95);
}

/* 更多操作菜单 */
.more-menu-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  padding-top: 120rpx;
  padding-right: 32rpx;
  animation: fadeIn 0.2s;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.more-menu {
  background-color: #2C2C2E;
  border-radius: 16rpx;
  overflow: hidden;
  min-width: 280rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
  animation: slideDown 0.2s;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 24rpx 28rpx;
  gap: 16rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: rgba(255, 255, 255, 0.1);
}

.menu-icon {
  font-size: 32rpx;
  line-height: 1;
}

.menu-text {
  font-size: 28rpx;
  color: #FFFFFF;
  line-height: 1;
}
