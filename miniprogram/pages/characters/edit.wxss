/* pages/characters/edit.wxss */
.page {
  min-height: 100vh;
  background-color: #F6F7F9;
  padding-bottom: 160rpx;
}

/* 表单区域 */
.form-section {
  padding: 32rpx;
}

.form-item {
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.required {
  color: #FF6B6B;
}

.form-input {
  width: 100%;
  height: 80rpx;
  font-size: 30rpx;
  color: #111111;
  border: 1rpx solid #E0E0E0;
  border-radius: 12rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  font-size: 30rpx;
  color: #111111;
  border: 1rpx solid #E0E0E0;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  box-sizing: border-box;
  line-height: 1.5;
}

.form-tip {
  font-size: 22rpx;
  color: #999999;
  margin-top: 16rpx;
}

/* 照片网格 */
.photos-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.photo-item {
  aspect-ratio: 1;
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
  background-color: #F0F0F0;
}

.photo-img {
  width: 100%;
  height: 100%;
}

.photo-delete {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  color: #FFFFFF;
  font-size: 32rpx;
  line-height: 1;
  font-weight: 300;
}

.photo-add {
  aspect-ratio: 1;
  background-color: #F6F7F9;
  border: 2rpx dashed #CCCCCC;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
}

.add-icon {
  font-size: 40rpx;
  color: #999999;
  line-height: 1;
}

.add-text {
  font-size: 20rpx;
  color: #999999;
}

/* 操作区域 */
.action-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  background-color: #FFFFFF;
  border-top: 1rpx solid #F0F0F0;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.save-btn {
  width: 100%;
  height: 96rpx;
  background-color: #111111;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.save-btn::after {
  border: none;
}
