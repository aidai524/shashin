/* ========== 内容滚动区 ========== */
.content-scroll.data-v-83a5a03c {
  height: calc(100vh - 180rpx);
  padding: 0 32rpx 32rpx;
}

/* ========== 骨架屏 ========== */
.skeleton-container.data-v-83a5a03c {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}
.skeleton-item.data-v-83a5a03c {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 36rpx rgba(0, 0, 0, 0.10);
}

/* 小卡片：占1份宽度 */
.skeleton-item.small.data-v-83a5a03c {
  width: calc((100% - 24rpx) / 3);
  aspect-ratio: 1 / 1;
}

/* 中卡片：占1份宽度，但更高 */
.skeleton-item.medium.data-v-83a5a03c {
  width: calc((100% - 24rpx) / 3);
  aspect-ratio: 3 / 4;
}

/* 大卡片：占2份宽度 */
.skeleton-item.large.data-v-83a5a03c {
  width: calc((100% - 12rpx) / 3 * 2);
  aspect-ratio: 16 / 9;
}

/* 超大卡片：占3份宽度（整行） */
.skeleton-item.xlarge.data-v-83a5a03c {
  width: 100%;
  aspect-ratio: 16 / 9;
}
.skeleton-inner.data-v-83a5a03c {
  width: 100%;
  height: 100%;
  background-color: #F0F0F0;
  position: relative;
  overflow: hidden;
}
.shimmer.data-v-83a5a03c {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, #F0F0F0 25%, #E0E0E0 50%, #F0F0F0 75%);
  background-size: 200% 100%;
  animation: shimmer-83a5a03c 1.5s infinite;
}
@keyframes shimmer-83a5a03c {
0% {
    background-position: 200% 0;
}
100% {
    background-position: -200% 0;
}
}

