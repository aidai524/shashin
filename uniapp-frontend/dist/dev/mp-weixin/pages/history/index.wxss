
.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}
.history-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.history-item {
  width: 48%;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}
.history-img {
  width: 100%;
  height: 340rpx;
  background-color: #eee;
}
.history-info {
  padding: 16rpx;
}
.history-time {
  font-size: 24rpx;
  color: #999;
}
.loading, .empty {
  text-align: center;
  padding: 40rpx;
  color: #999;
}
