
/* ========== Page Container ========== */
.page.data-v-530ef1ab {
  min-height: 100vh;
  background-color: #F6F7F9;
}

/* ========== Page Header ========== */
.page-header.data-v-530ef1ab {
  padding: 32rpx 32rpx 24rpx;
}
.page-title.data-v-530ef1ab {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #111111;
  line-height: 1.3;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Helvetica Neue', sans-serif;
}
.page-subtitle.data-v-530ef1ab {
  display: block;
  font-size: 24rpx;
  font-weight: 400;
  color: #111111;
  opacity: 0.6;
  margin-top: 4rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Text', 'Helvetica Neue', sans-serif;
}

/* ========== Content Scroll ========== */
.content-scroll.data-v-530ef1ab {
  height: calc(100vh - 140rpx);
  padding: 0 32rpx 32rpx;
}

/* ========== Skeleton Grid ========== */
.skeleton-grid.data-v-530ef1ab {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}
.skeleton-item.data-v-530ef1ab {
  background-color: #FFFFFF;
  border-radius: 32rpx;
  overflow: hidden;
  padding: 16rpx;
}
.skeleton-image.data-v-530ef1ab {
  width: 100%;
  height: 340rpx;
  background-color: #F0F0F0;
  border-radius: 24rpx;
  position: relative;
  overflow: hidden;
  margin-bottom: 16rpx;
}
.shimmer.data-v-530ef1ab {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, #F0F0F0 25%, #E0E0E0 50%, #F0F0F0 75%);
  background-size: 200% 100%;
  animation: shimmer-530ef1ab 1.5s infinite;
}
@keyframes shimmer-530ef1ab {
0% {
    background-position: 200% 0;
}
100% {
    background-position: -200% 0;
}
}
.skeleton-text.data-v-530ef1ab {
  width: 60%;
  height: 32rpx;
  background-color: #F0F0F0;
  border-radius: 8rpx;
}

/* ========== History Grid ========== */
.history-grid.data-v-530ef1ab {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

/* ========== History Item ========== */
.history-item.data-v-530ef1ab {
  background-color: #FFFFFF;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 36rpx rgba(0, 0, 0, 0.10);
  transition: all 0.2s ease;
}
.history-item.data-v-530ef1ab:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}
.history-img.data-v-530ef1ab {
  width: 100%;
  height: 340rpx;
  background-color: #F0F0F0;
  display: block;
}
.history-info.data-v-530ef1ab {
  padding: 24rpx;
}
.history-time.data-v-530ef1ab {
  font-size: 24rpx;
  color: #666666;
  opacity: 0.7;
  font-weight: 500;
}

/* ========== Empty State ========== */
.empty-state.data-v-530ef1ab {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 120rpx 0;
}
.empty-icon.data-v-530ef1ab {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}
.empty-text.data-v-530ef1ab {
  font-size: 28rpx;
  color: #999999;
}
